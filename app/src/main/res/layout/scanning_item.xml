<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_uid"
                android:layout_weight="1"
                android:text="device uid" />

            <TextView
                android:id="@+id/device_uid_value"
                android:layout_weight="1" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_address"
                android:layout_weight="1"
                android:text="device address" />

            <TextView
                android:id="@+id/device_address_value"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_name_list"
                android:layout_weight="1"
                android:text="device name filter" />

            <TextView
                android:id="@+id/device_name_list_value"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_up"
                android:layout_weight="1"
                android:text="device up" />

            <TextView
                android:id="@+id/device_up_value"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/manufacturer_data_filter"
                android:layout_weight="1"
                android:text="manufacturer data filter" />

            <TextView
                android:id="@+id/manufacturer_data_filter_value"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/last_activity_date"
                android:layout_weight="1"
                android:text="last activity" />

            <TextView
                android:id="@+id/last_activity_date_value"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_mode"
                android:layout_weight="1"
                android:text="device mode" />

            <TextView
                android:id="@+id/device_mode_value"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_back"
                android:layout_weight="1"
                android:text="back" />

            <Button
                android:id="@+id/button_connect"
                android:layout_weight="1"
                android:text="connect" />

        </TableRow>

    </TableLayout>

</LinearLayout>