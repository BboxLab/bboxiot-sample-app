<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_uid"
                android:layout_weight="0.5"
                android:width="0px"
                android:text="device uid" />

            <TextView
                android:id="@+id/device_uid_value"
                android:layout_weight="0.5"
                android:width="0px" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_address"
                android:layout_weight="0.5"
                android:width="0px"
                android:text="device address" />

            <TextView
                android:id="@+id/device_address_value"
                android:layout_weight="0.5"
                android:width="0px" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_connected"
                android:layout_weight="0.5"
                android:width="0px"
                android:text="connected" />

            <ImageView
                android:id="@+id/device_connected_value"
                android:layout_weight="0.5"
                android:width="0px"
                android:src="@drawable/red_circle" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/supported_device_name_name"
                android:layout_weight="0.5"
                android:width="0px"
                android:text="manufacturer" />

            <TextView
                android:id="@+id/supported_device_name_name_value"
                android:layout_weight="0.5"
                android:width="0px" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_up"
                android:layout_weight="0.5"
                android:width="0px"
                android:text="device up" />

            <TextView
                android:id="@+id/device_up_value"
                android:layout_weight="0.5"
                android:width="0px" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_mode"
                android:layout_weight="0.5"
                android:width="0px"
                android:text="device mode" />

            <TextView
                android:id="@+id/device_mode_value"
                android:layout_weight="0.5"
                android:width="0px" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_connect"
                android:layout_weight="0.5"
                android:width="0px"
                android:text="connect" />

            <Button
                android:id="@+id/button_disconnect"
                android:layout_weight="0.5"
                android:width="0px"
                android:text="disconnect" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_back"
                android:layout_weight="0.5"
                android:width="0px"
                android:text="back" />

            <Button
                android:id="@+id/button_disassociate"
                android:layout_weight="0.5"
                android:width="0px"
                android:text="disassociate" />

        </TableRow>

        <TableRow
            android:id="@+id/properties_on_off_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/switch_state_on"
                android:layout_weight="0.5"
                android:width="0px"
                android:text="ON" />

            <Button
                android:id="@+id/switch_state_off"
                android:layout_weight="0.5"
                android:width="0px"
                android:text="OFF" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TableRow
            android:id="@+id/properties_color_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/color_red"
                android:layout_weight="0.25"
                android:width="0px"
                android:backgroundTint="#FF0000"
                android:text="" />

            <Button
                android:id="@+id/color_green"
                android:layout_weight="0.25"
                android:width="0px"
                android:backgroundTint="#00FF00"
                android:text="" />

            <Button
                android:id="@+id/color_blue"
                android:layout_weight="0.25"
                android:width="0px"
                android:backgroundTint="#0000FF"
                android:text="" />

            <Button
                android:id="@+id/color_white"
                android:layout_weight="0.25"
                android:width="0px"
                android:backgroundTint="#FFFFFF"
                android:text="" />

        </TableRow>
    </TableLayout>

    <SeekBar
        android:id="@+id/intensity_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50" />

    <ListView
        android:id="@+id/properties_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

</LinearLayout>